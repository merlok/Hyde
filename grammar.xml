<grammar language="C/C++" ext="c|cpp|h|hpp">

	<strings color="#006600">".+"</strings>
		
	<comments color="#006600">
		<single>\/\/[^\n]*</single>
		<multi>
			<start>\/\*</start>
			<end>\*\/</end>
		</multi>
	</comments>
	
	<methods color="#0000FF">\b[A-Za-z0-9_]+(?=\()</methods>
	
	<keywords color="#660000">
		<item>\binclude\b</item> 
		<item>\bimport\b</item> 
	</keywords>
	
	<keywords color="#000066">
		<item>\bif\b</item> 
		<item>\belse\b</item> 
		<item>\bfor\b</item> 
		<item>\breturn\b</item> 
		<item>\bwhile\b</item> 
		<item>\bof\b</item> 
		<item>\bforeach\b</item> 
		<item>\bfunction\b</item> 
		<item>\b\->\b</item> 
	</keywords>
	
</grammar>

