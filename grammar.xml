<grammar language="C/C++" ext="c|cpp|h|hpp">

	<strings color="#006600">"[^"]+"</strings>
		
	<comments color="#CCCCCC" style="italic">
		<single>\/\/[^\n]+</single>
		<multi>
			<start>\/\*</start>
			<end>\*\/</end>
		</multi>
	</comments>
	
	<methods color="#0000FF">\b[A-Za-z0-9_]+(?=\()</methods>
	
	<keywords color="#AA0000">
		<item>\-?0x[A-Fa-f0-9]+</item>
		<item>\-?[0-9]+|([0-9]*\.[0-9]+)[eE][\-\+]?[0-9]+?</item>
		<item>\-?[0-9]+</item>
	</keywords>
	
	<keywords color="#000066" style="bold">
		<item>\bif\b</item> 
		<item>\belse\b</item> 
		<item>\bfor\b</item> 
		<item>\breturn\b</item> 
		<item>\bwhile\b</item> 
		<item>\bof\b</item> 
		<item>\bforeach\b</item> 
		<item>\bfunction\b</item> 
		<item>[\+\-\*\/=\~]</item> 

		<item>\b\->\b</item> 
	</keywords>
	
	<keywords color="#660000" style="bold,underline">
		<item>\binclude\b</item> 
		<item>\bimport\b</item> 
	</keywords>
	

	
</grammar>

